<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Articles</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Section Title</th>
                                    <th>Article Title</th>
                                    <th>Author</th>
                                    <th class="text-center" style="width: 150px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(articles && articles.length > 0) { %>
                                    <% articles.forEach(function(article) { %>
                                        <tr>
                                            <td>
                                                <span class="badge bg-info"><%= article.section || '-' %></span>
                                            </td>
                                            <td>
                                                <strong><%= article.title || '-' %></strong>
                                            </td>
                                            <td>
                                                <%= article.author || '-' %>
                                            </td>
                                            <td class="text-center">
                                                <a href="/bien-tap-suy-niem-edit?_id=<%= article._id %>" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button class="btn btn-sm btn-danger delete-article" data-id="<%= article._id %>">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            No articles found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Article Button -->
    <div class="row mb-4">
        <div class="col-12">
            <a href="/bien-tap-suy-niem-edit" class="btn btn-success">
                <i class="bi bi-plus"></i> Add New Article
            </a>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
    
    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }
    
    .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
</style>
