<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Articles<% if (typeof urlParams !== 'undefined' && urlParams._id) { %> — <%= ngayLe && ngayLe.title ? ngayLe.title : '' %><% } %></h5>
                    <% if (typeof urlParams !== 'undefined' && urlParams._id) { %>
                        <a href="/bien-tap-suy-niem" class="btn btn-sm btn-light">
                            <i class="bi bi-arrow-left"></i> Back to all
                        </a>
                    <% } %>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    
                                    <th>Article Title</th>
                                    <% if (!(typeof urlParams !== 'undefined' && urlParams._id)) { %>
                                        <th>Ngày Lễ</th>
                                    <% } %>
                                    <th>Author</th>
                                    <th class="text-center" style="width: 150px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(articles && articles.length > 0) { %>
                                    <% articles.forEach(function(article) { %>
                                        <tr>
                                            
                                            <td>
                                                <strong><%= article.title || '-' %></strong>
                                            </td>
                                            <% if (!(typeof urlParams !== 'undefined' && urlParams._id)) { %>
                                                <td>
                                                    <%= article.ngay_le_title && article.ngay_le_title.length ? article.ngay_le_title : '-' %>
                                                </td>
                                            <% } %>
                                            <td>
                                                <%= article.author || '-' %>
                                            </td>
                                            <td class="text-center">
                                                <a href="/bien-tap-suy-niem-edit?_id=<%= article._id %><% if (typeof urlParams !== 'undefined' && urlParams._id) { %>&ngay_le_id=<%= urlParams._id %>&ngay_le_title=<%= encodeURIComponent(ngayLe && ngayLe.title ? ngayLe.title : '') %><% } else if (article.ngay_le_id) { %>&ngay_le_id=<%= article.ngay_le_id %>&ngay_le_title=<%= encodeURIComponent(article.ngay_le_title || '') %><% } %>" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button class="btn btn-sm btn-danger delete-article" data-id="<%= article._id %>">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="<%= (typeof urlParams !== 'undefined' && urlParams._id) ? 3 : 4 %>" class="text-center text-muted py-4">
                                            No articles found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add New Article Button -->
    <div class="row mb-4">
        <div class="col-12">
            <% let editLink = '/bien-tap-suy-niem-edit'; %>
            <% if(typeof urlParams !== 'undefined' && urlParams._id) { %>
                <% editLink += '?ngay_le_id=' + urlParams._id; %>
            <% } %>
            <a href="<%= editLink %>" class="btn btn-success">
                <i class="bi bi-plus"></i> Add New Article
            </a>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
    // Delete article handler
    $('.delete-article').click(function(){
        const articleId = $(this).data('id');
        if(confirm('Are you sure you want to delete this article?')) {
            $.ajax({
                url: '/delete-article',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ _id: articleId }),
                success: function(response) {
                    alert('Article deleted successfully');
                    location.reload();
                },
                error: function(err) {
                    alert('Failed to delete article. Please try again.');
                    console.error('Error:', err);
                }
            });
        }
    });
});
</script>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
    
    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }
    
    .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
</style>
